<p id="notice"><%= notice %></p>

<h1>Products added to the internal DB</h1>

<table>
  <thead>
    <tr>
      <th>Walmart</th>
      <th>Name</th>
      <th>Price</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.walmart_id %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.url %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

